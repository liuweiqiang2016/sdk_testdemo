<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ElementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->


        <Button
            android:id="@+id/an_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="注解测试OnMyClick"
            android:onClick="onMyClick"/>


        <com.sensorsdata.analytics.android.test.view.KeyBoardButton
            android:id="@+id/ele_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/ele_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="123456" />

        <CheckBox
            android:id="@+id/ele_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="666xyz" />

        <CheckedTextView
            android:id="@+id/ele_ctv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:text="CheckedTextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="ImageButton" />
            <ImageButton
                android:id="@+id/ele_ib"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@mipmap/ic_launcher"
                android:contentDescription="ImageButton的测试"
                android:text="ImageButton的测试" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ele_iv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="imageView点击"
                />
        </LinearLayout>

        <RadioButton
            android:id="@+id/ele_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="-999" />

        <RadioGroup
            android:id="@+id/ele_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.99" />

            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
        </RadioGroup>

        <RatingBar
            android:id="@+id/ele_rbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" />

        <SeekBar
            android:id="@+id/ele_sb"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:max="100"
            android:progress="30" />

        <Spinner
            android:id="@+id/ele_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:entries="@array/spinner_test"
            android:spinnerMode="dropdown" />

        <Switch
            android:id="@+id/ele_sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textOff="Close"
            android:textOn="Open" />

        <TextView
            android:id="@+id/ele_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="TextView 点击事件" />

        <EditText
            android:id="@+id/ele_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:hint="输入框"/>

        <ToggleButton
            android:id="@+id/ele_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textOff="Close"
            android:textOn="Open" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListView:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.sensorsdata.analytics.android.test.view.MyListView
            android:id="@+id/ele_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:entries="@array/list_test" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="ExpandableListView:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.sensorsdata.analytics.android.test.view.MyExpandableListView
            android:id="@+id/ele_exlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="RecyclerView:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ele_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1" />

        <com.sensorsdata.analytics.android.test.view.MyGridView
            android:id="@+id/ele_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:columnWidth="40dp"
            android:gravity="center"
            android:horizontalSpacing="1dp"
            android:layout_weight="1"/>


    </LinearLayout>
</ScrollView>